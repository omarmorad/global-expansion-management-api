# Production Environment Variables for Render

# Database Configuration
DATABASE_PATH=./data/database.sqlite

# MongoDB Configuration (Use MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/global_expansion_docs

# JWT Configuration (Render will generate JWT_SECRET automatically)
JWT_EXPIRES_IN=24h

# Application Configuration
NODE_ENV=production
PORT=10000

# Email Configuration (Optional - set to false for now)
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@expanders360.com

# Admin Configuration
ADMIN_EMAIL=admin@expanders360.com